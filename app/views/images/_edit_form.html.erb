<%= simple_form_for @image do |f| %>
	<%= f.input :date %>
	<%= f.input :priority %>
	<%= f.input :department %>
	<%= f.input :date_reported %>
	<%= f.input :report, :input_html => {:rows => 10, :cols => 100} %>

	<%= f.input :abnormality_doctor, :label => "Further Investigation Needed" %>

	<%= f.input :abnormality_machine, :label => "Further Investigation Needed" %>

	<%= f.button :submit, "Submit" %>
<% end %>